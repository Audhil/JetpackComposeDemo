        <activity
            android:name=".presentation.ui.activity.flow.FlowSampleActivity"
            android:exported="false"
            android:theme="@style/Theme.XJpackCompose.NoActionBar" />

        <activity
            android:name=".presentation.ui.activity.tablet_support.TabletScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.XJpackCompose.NoActionBar" />

        <activity
