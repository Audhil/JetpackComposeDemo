        <activity
            android:name="com.example.xjpackcompose.presentation.ui.activity.AppLaunchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.xjpackcompose.presentation.ui.activity.CanvasActivity"
            android:theme="@style/Theme.XJpackCompose.NoActionBar" />

