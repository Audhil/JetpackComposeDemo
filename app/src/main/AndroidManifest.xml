        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XJpackCompose"
        android:usesCleartextTraffic="true">

        <activity android:name="com.example.xjpackcompose.presentation.ui.activity.BottomNavActivity" />
